<MudDialog MaxWidth="MaxWidth.Small" CloseButton="true">
    <DialogContent>
        <MudForm Spacing="6">
            <MudInput @bind-Value="VineyardName" Variant="Variant.Outlined" FullWidth="true" Placeholder="Vineyard Name" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    public string VineyardName { get; set; }
    
    private void Submit() => MudDialog.Close(DialogResult.Ok(VineyardName));

    private void Cancel() => MudDialog.Cancel();

}