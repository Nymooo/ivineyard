@using Model.Entities.Bookingobjects
@using WebGUI.Client.ClientServices
@inject EquipmentService EquipmentService

<MudDialog MaxWidth="MaxWidth.Small" CloseButton="true">
    <DialogContent>
        <MudForm Spacing="6">
            <MudInput @bind-Value="_equipment.Name" Variant="Variant.Outlined" FullWidth="true" Placeholder="Tank Name"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    private Equipment _equipment = new();

    private void Submit()
    {
        EquipmentService.CreateEquipmentAsync(_equipment);
        MudDialog.Close(DialogResult.Ok(_equipment));
    }

    private void Cancel() => MudDialog.Cancel();

}